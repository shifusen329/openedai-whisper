[Unit]
Description=OpenedAI Whisper API Server
After=network.target

[Service]
Type=simple
User=administrator
WorkingDirectory=/home/administrator/workspace/openedai-whisper
ExecStart=/home/administrator/workspace/openedai-whisper/.venv/bin/python whisper.py --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target